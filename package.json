{
  "name": "plastic-palette",
  "version": "1.0.4",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/palette.d.ts",
        "default": "./dist/palette.js"
      },
      "require": {
        "types": "./dist/palette.d.cts",
        "default": "./dist/palette.cjs"
      }
    }
  },
  "main": "./dist/palette.js",
  "module": "./dist/palette.js",
  "types": "./dist/palette.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup ./palette.ts --format esm,cjs --clean --dts",
    "lint": "eslint .",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{css,json,md}": [
      "prettier --write"
    ]
  },
  "prettier": "@will-stone/prettier-config",
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@will-stone/eslint-config": "^0.4.0",
    "@will-stone/prettier-config": "^7.0.1",
    "eslint": "^8.50.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  }
}
